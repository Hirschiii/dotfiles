set $fm DP1
set $sm HDMI2
set $am eDP1

include $HOME/.config/i3/themes/onedark.conf
include $HOME/.config/i3/workspaces.conf

include $HOME/.config/i3/scratchpad.conf
# exec autotiling -w 1 3 5 7 9

set $mod Mod4

font pango:monospace 8

for_window [class="^.*"] border pixel 3
new_window 1pixel

hide_edge_borders smart
smart_gaps on

border_radius 10

gaps inner 6
gaps outer 6

floating_modifier $mod


bindsym $mod+Shift+s layout stacking
bindsym $mod+Shift+t layout tabbed


exec_always --no-startup-id bash ~/.config/i3/autostart.sh
exec_always --no-startup-id bash ~/.config/polybar/blocks/launch.sh

