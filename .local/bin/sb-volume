#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e pulsemixer ;;
	2) pamixer -t ;;
	4) pamixer --allow-boost -i 1 ;;
	5) pamixer --allow-boost -d 1 ;;
	3) notify-send "Vol: Volume module" "\- Shows volume Vol:, Mut: if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

[ $(pamixer --get-mute) = true ] && echo Mute && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon="Vol:"
elif [ "$vol" -gt "30" ]; then
	icon="Vol:"
elif [ "$vol" -gt "0" ]; then
	icon="Vol:"
else
        echo "Vol: 0" && exit
fi

echo "$icon$vol%"
