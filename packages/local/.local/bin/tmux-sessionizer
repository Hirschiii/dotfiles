#!/usr/bin/env bash

SESSION_ORDNER=""

[ -d "$HOME/git/" ] && SESSION_ORDNER="$SESSION_ORDNER $HOME/git/"
[ -d "$HOME/projects" ] && SESSION_ORDNER="$SESSION_ORDNER $HOME/projects/*/"
[ -d "$HOME/personal" ] && SESSION_ORDNER="$SESSION_ORDNER $HOME/personal"

if [[ $# -eq 1 ]]; then
	selected=$1
else
	selected=$(find $SESSION_ORDNER -mindepth 1 -maxdepth 3 -type d -not -name '.*' | fzf)
fi

if [[ -z $selected ]]; then
	exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [! -n $TMUX ]; then
	echo "Scritp: No current Clinet "
	# tmux new-session -s $selected_name -c $selected
	tmux new -A -s $selected_name -c $selected
	exit 0
else
	echo "Scritp: YES current Clinet "
fi

if ! tmux has-session -t=$selected_name 2>/dev/null; then
	tmux new-session -ds $selected_name -c $selected
fi

tmux switch-client -t $selected_name
